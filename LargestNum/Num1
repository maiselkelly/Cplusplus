//Program to find the max number of three

#include <iostream>
#include <iomanip>
using namespace std;

int largest(int x, int y, int z);

int main()
{
    int num1 = 1;
    int num2 = 6;
    int num3 = 4;
    int max = 0;
    
    max = largest (num1, num2, num3);
    cout << "The largest number is " << max << endl;
}

int largest (int x, int y, int z)
{
    int max = 0;
    if(x > max)
        max = x;
    if(y > max)
        max = y;
    if(z > max)
        max = z;
    return max;
}
