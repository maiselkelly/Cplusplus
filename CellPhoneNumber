//When given a Letter on a phone, code will display the number that corresponds

#include <iostream>
#include <iomanip>

using namespace std;

int main()
{
    char letter;
    cout << "Enter a letter A - Z: " << endl;
    cin >> letter;
 
 //Cases for each number on the telephone
    switch(letter)
    {
        case 'A':
        case 'B':
        case 'C':
        case 'a':
        case 'b':
        case 'c':
            cout << "The number is 2" << endl;
            break;
        case 'D':
        case 'E':
        case 'F':
        case 'd':
        case 'e':
        case 'f':
            cout << "The number is 3" << endl;
            break;
        case 'G':
        case 'H':
        case 'I':
        case 'g':
        case 'h':
        case 'i':
            cout << "The number is 4" << endl;
            break;
        case 'J':
        case 'K':
        case 'L':
        case 'j':
        case 'k':
        case 'l':
            cout << "The number is 5" << endl;
            break;
        case 'M':
        case 'N':
        case 'O':
        case 'm':
        case 'n':
        case 'o':
            cout << "The number is 6" << endl;
            break;
        case 'P':
        case 'Q':
        case 'R':
        case 'S':
        case 'p':
        case 'q':
        case 'r':
        case 's':
            cout << "The number is 7" << endl;
            break;
        case 'T':
        case 'U':
        case 'V':
        case 't':
        case 'u':
        case 'v':
            cout << "The number is 8" << endl;
            break;
        case 'W':
        case 'X':
        case 'Y':
        case 'Z':
        case 'w':
        case 'x':
        case 'y':
        case 'z':
            cout << "The number is 9" << endl;
            break;
    }
            return 0;
    
    }
