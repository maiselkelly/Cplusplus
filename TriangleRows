
//Creating a Triangle Pattern

#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
//Increasing Triangle Rows
  for (int i = 0; i < 10; i++)
    {
        //Increasing Triangle Columns
    for(int k =0; k < i; k++)
    {
        cout << '*';
        
    }
        cout << endl;
}
//Decreasing Triangle Rows
    for(int i = 10; i > 0; i--)
    {
        //Decreasing Triangle Columns
        for(int k = 0; k < i; k++)
        {
            cout << '*';
        }
        cout << endl;
    }
    return 0;
}
